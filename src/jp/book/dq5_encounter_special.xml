	<thead>
		<tr>
			<th>ID</th>
			<th>グループ 1 モンスターID</th>
			<th>グループ 2 モンスターID</th>
			<th>グループ 3 モンスターID</th>
			<th>グループ 1 匹数</th>
			<th>グループ 2 匹数</th>
			<th>グループ 3 匹数</th>
		</tr>
	</thead>
	<tbody>
		<tr><td>1</td><td>スライムナイト</td><td>スライム</td><td>ホイミスライム</td><td>2,3</td><td>4～7</td><td>3,4</td></tr>
		<tr><td>2</td><td>わらいぶくろ</td><td>ホイミスライム</td><td>がいこつへい</td><td>2</td><td>3</td><td>1</td></tr>
		<tr><td>3</td><td>がいこつへい</td><td>カパーラナーガ</td><td>-</td><td>2</td><td>3,4</td><td>1</td></tr>
		<tr><td>4</td><td>ジェリーマン</td><td>ジェリーマン</td><td>-</td><td>1</td><td>1</td><td>1</td></tr>
		<tr><td>5</td><td>ブルーイーター</td><td>エビルマスター</td><td>レッドイーター</td><td>2</td><td>1</td><td>2</td></tr>
		<tr><td>6</td><td>はぐれメタル</td><td>メタルスライム</td><td>-</td><td>1</td><td>4～7</td><td>1</td></tr>
