    <tr><td align="center"><literal>#$06</literal></td><td align="center"><literal>#$FF</literal></td><td>頭数 1</td></tr>
    <tr><td align="center"><literal>#$07</literal></td><td align="center"><literal>#$FF</literal></td><td>頭数 2</td></tr>
    <tr><td align="center"><literal>#$08</literal></td><td align="center"><literal>#$FF</literal></td><td>頭数 3</td></tr>
