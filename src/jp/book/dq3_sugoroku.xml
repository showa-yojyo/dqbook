    <tr><td><literal>#$0031</literal></td><td><literal>#$00FFFF</literal></td><td>マップ視点右</td></tr>
    <tr><td><literal>#$0033</literal></td><td><literal>#$00FFFF</literal></td><td>マップ視点下</td></tr>
